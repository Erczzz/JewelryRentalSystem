@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager
@model IEnumerable<JewelryRentalSystem.Models.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jewelry Rental System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JewelryRentalSystem.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav id="navbarDiv" class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div id="navbar2ndDiv" class="container-fluid">
                <a id="navbarTitle" class="navbar-brand text-dark" asp-area="" asp-controller="Product" asp-action="GetAllProducts">Our Jewelry</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" id="navbarToggler"></span>
                </button>
                <div id="navbarButtons" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                    </ul>
                    <ul id="navbarRight" class="nav navbar-nav my-2 my-lg-0">
       

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="GetAllProducts">Product</a>
                        </li>
                        @if (_signInManager.IsSignedIn(User) && User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="GetAllRoles">Role</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ProductManagement">ProductManagement</a>
                            </li>
                        }

                        @if (_signInManager.IsSignedIn(User))
                        {
@*                            Mas okay sana kung dropdown list tong mga anchor tag*@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-action="ChangePassword" asp-controller="Account">
                                    Change Password
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-action="Logout" asp-controller="Account">
                                   @* Logout @User.FindFirst("UserFirstName").Value*@
                                    Logout @User.Identity.Name
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="SignUp">Register</a>
                            </li>
                            <li class="nav-item">
                                <a id="navbarLoginButton" class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2023 - JewelryRentalSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
