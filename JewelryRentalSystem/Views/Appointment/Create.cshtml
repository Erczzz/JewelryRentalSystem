@model JewelryRentalSystem.Models.Appointment

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h4 id="createAppointmentH4">CREATE APPOINTMENT</h4>
<hr />
<div class="row">
    <div class="container" id="createAppointmentContainer">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateOfAppointment" class="control-label"></label>
                <input asp-for="DateOfAppointment" class="form-control" required/>
                <span asp-validation-for="DateOfAppointment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleTimeId" class="control-label"></label>
                <select asp-for="ScheduleTimeId" class ="form-control" asp-items="ViewBag.ScheduleTimeId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Branch Location</label>
                <select asp-for="LocationId" class ="form-control" asp-items="ViewBag.LocationId" required></select>
            </div>
            <div hidden class="form-group">
                <label class="control-label">Appointment Type</label>
                <select asp-for="AppointmentTypeId" class ="form-control" asp-items="ViewBag.AppointmentTypeId" required></select>
            </div>
            <br /><div class="d-inline-flex justify-content-between">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-warning" />&nbsp
                </div>
                <div>
                    <a class="btn btn-secondary" asp-action="Index" asp-controller="Cart">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>





