@model JewelryRentalSystem.Models.Appointment

@{
    ViewData["Title"] = "Create";
}


<h3>Create Appointment</h3>
<hr />
<div class="row">
    <div class="container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateOfAppointment" class="control-label"></label>
                <input asp-for="DateOfAppointment" class="form-control" />
                <span asp-validation-for="DateOfAppointment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeOfAppointment" class="control-label"></label>
                <select class="form-control">
                    <option value="1">8:00:00 - 9:00:00</option>
                    <option value="2">9:00:00 - 10:00:00</option>
                    <option value="3">10:00:00 - 11:00:00</option>
                    <option value="4">11:00:00 - 12:00:00</option>
                    <option value="5">13:00:00 - 14:00:00</option>
                    <option value="6">14:00:00 - 15:00:00</option>
                    <option value="7">15:00:00 - 16:00:00</option>
                    <option value="8">16:00:00 - 17:00:00</option>
                    <span asp-validation-for="TimeOfAppointment" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalAmountToBePaid" class="control-label"></label>
                <input asp-for="TotalAmountToBePaid" class="form-control" />
                <span asp-validation-for="TotalAmountToBePaid" class="text-danger"></span>
            </div><br />
            <div class="d-inline-flex justify-content-end">
                <a asp-action="Index" class="btn btn-secondary">Back to Cart</a>&nbsp
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>



