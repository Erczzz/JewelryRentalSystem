@model JewelryRentalSystem.Models.Appointment

@{
    ViewData["Title"] = "Details";
}

<h4>Appointment Details</h4>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.FirstName) @Html.DisplayFor(model => model.Customer.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfAppointment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfAppointment)
        </dd>
        <dt class = "col-sm-2">
            Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScheduleTime.SchedTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location.LocationName)
        </dd>
        <dt class = "col-sm-2">
            Appointment Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppointmentType.APTName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Transaction">Back to List</a>
</div>
