@model JewelryRentalSystem.Models.Cart
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

@{
    ViewData["Title"] = "AddToCart";

}

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" asp-controller="Cart" asp-action="Create">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add To Cart</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="CustomerName" class="control-label"></label>
                        <input asp-for="CustomerName" readonly value="@(User.FindFirst("UserFirstName").Value + " " + User.FindFirst("UserLastName").Value)" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductQty" class="control-label"></label>
                        <input asp-for="ProductQty" class="form-control" />
                        <span asp-validation-for="ProductQty" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RentDuration" class="control-label"></label>
                        <input asp-for="RentDuration" class="form-control" />
                        <span asp-validation-for="RentDuration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductPrice" class="control-label"></label>
                        <input asp-for="ProductPrice" class="form-control" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Total" class="control-label"></label>
                        <input asp-for="Total" class="form-control" />
                        <span asp-validation-for="Total" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input hidden asp-for="ProductId" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary">Add Employee</button>
                    <div class="form-group" id="addToCartBtn">
                        <input asp-action="GetAllProducts" asp-controller="Product" type="submit" value="Add To Cart" class="btn btn-warning" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>