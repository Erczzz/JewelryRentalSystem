@{
}


<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/jewel1.jpg" class="d-block w-100" alt="">
        </div>
        <div class="carousel-item">
            <img src="~/img/jewel2.jpg" class="d-block w-100" alt="">
        </div>
        <div class="carousel-item">
            <img src="~/img/jewel3.jpg" class="d-block w-100" alt="">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<br />
<div class="container-product">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Search..." aria-label="Search..." aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button">Search</button>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div id="containerProd" class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
                <div class="card h-80">
                    <img src="~/img/JewelSampleImg.PNG" class="card-img-top" alt="">
                    <div class="card-body">
                        <p class="card-title">@item.ProductName</p>
                        <h5>Php @item.ProductPrice</h5>
                    </div>
                    <div class="card-footer d-flex flex-row justify-content-between">
                        <div>
                            @if (item.ProductStock == 0)
                            {
                                <small class="text-muted">Out of stock</small>
                            }
                            else if (item.ProductStock == 1)
                            {
                                <small class="text-muted">@item.ProductStock item left</small>
                            }
                            else
                            {
                                <small class="text-muted">@item.ProductStock items left</small>
                            }
                        </div>
                        <div>
                            <a class="btn btn-secondary btn-sm">Rent</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

