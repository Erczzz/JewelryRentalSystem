@model List<Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<H1>Product List</H1>

<a asp-action="Create" asp-controller="Product" class="btn btn-dark">Add Product</a>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Price</th>
            <th scope="col">Stock</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.ProductId</th>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice</td>
                <td>@item.ProductStock</td>
                <td>
                    <a class="btn btn-success btn-sm" asp-controller="Product" asp-action="Details" asp-route-productId="@item.ProductId">View</a>
                    <a class="btn btn-primary btn-sm" asp-controller="Product" asp-action="Update" asp-route-productId="@item.ProductId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Product" asp-action="Delete" asp-route-productId="@item.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
