@model JewelryRentalSystem.ViewModels.CartViewModel

@{
    ViewData["Title"] = "AddToCart";
}

<h4 id="addToCartH4">ADD ITEM</h4>
<hr />
<div class="row">
    <div class="container" id="addToCartContainer">
        <img src="@Model.ProductImage" />
        <div class="=container" id="addToCartForm">
            <form asp-action="AddToCart">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input hidden asp-for="CustomerId" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Product Name</label>
                    <input readonly asp-for="ProductName" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Product Price</label>
                    <input readonly asp-for="ProductPrice" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Quantity</label>
                    <input asp-for="ProductQty" class="form-control" />
                    <span asp-validation-for="ProductQty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Rent Duration</label>
                    <input asp-for="RentDuration" class="form-control" />
                    <span asp-validation-for="RentDuration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input hidden asp-for="Total" class="form-control" />
                </div>
                <div class="form-group">
                    <input hidden asp-for="ProductId" class="form-control" />
                </div>
                <br /><div class="container" id="addToCartBtns">
                    <div class="form-group">
                        <input asp-action="Create" asp-controller="Cart" type="submit" value="ADD TO BAG" class="btn btn-outline-warning" />&nbsp
                    </div>
                    <div>
                        <a class="btn btn-outline-secondary" asp-action="GetAllProducts" asp-controller="Product">CANCEL</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



