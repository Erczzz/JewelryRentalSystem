@model JewelryRentalSystem.Models.Cart
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

@{
    ViewData["Title"] = "AddToCart";

}


<hr />

<div id="addToCartMainDiv" class="container" >
@*    <div id="addToCartImg">
        <img src="" />
    </div>*@
    <div class="container" id="addToCartDiv">
        <div class="container" id="addToCartH4andBack">
            <h4>ADD TO CART</h4>
        </div>
        <form asp-action="Create" asp-controller="Cart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="CustomerName" hidden value="@(User.FindFirst("UserFirstName").Value + " " + User.FindFirst("UserLastName").Value)" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input readonly asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label  class="control-label">Quantity</label>
                <input asp-for="ProductQty" class="form-control" />
                <span asp-validation-for="ProductQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Rent Duration (Day/s)</label>
                <input asp-for="RentDuration" class="form-control" />
                <span asp-validation-for="RentDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="Total" class="form-control" />
            </div>
            <div class="form-group">
                <input hidden asp-for="ProductId" class="form-control" />
            </div><br />
            <div class="d-inline-flex">
                <div>
                    <a asp-action="GetAllProducts" asp-controller="Product" class="btn btn-secondary">Back to List</a>&nbsp
                </div>
                <div class="form-group" id="addToCartBtn">
                    <input type="submit" value="Add To Cart" class="btn btn-warning" />
                </div>
            </div>
        </form>
    </div>
</div>



