@model JewelryRentalSystem.ViewModels.ProductViewModel


    <h4 style="text-align:center; color: #6C757D;">
        ADD PRODUCT
    </h4>
    <hr />
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["priceError"] != null)
{
    <div class="alert alert-danger">@TempData["priceError"]</div>
}
<div class="container" id="addProductContainer">


    <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Product">
        @*   <div asp-validation-summary="All" class="text-danger" ></div>*@
        <div class="container">
            <div class="form-group">
                <label class="control-label">Product Name</label>
                <input required asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Product Classification</label>
                <select asp-for="CustomerClassId" class="form-control" asp-items="ViewBag.CustomerClassId"></select>
            </div>

            <div class="form-group">
                <label class="control-label">Product Price</label>
                <input required  asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Product Stock</label>
                <input required min="1" asp-for="ProductStock" class="form-control" />
                <span asp-validation-for="ProductStock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Product Description</label>
                <textarea required asp-for="ProductDescription" class="form-control"></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImage" class="control-label">Product Image</label>
                <div class="custome-file">
                    <input required asp-for="ProductImage" class="custom-file-input form-control" id="customFile" />
                    <label class="custom-file-label" for="customeFile"></label>
                </div>
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
            <div class="d-inline-flex justify-content-start">
                <br />
                <button class="btn btn-warning" type="submit">Save</button> &nbsp
                <a class="btn btn-secondary" asp-action="ProductManagement">Cancel</a>
            </div>

        </div>

    </form>

</div>