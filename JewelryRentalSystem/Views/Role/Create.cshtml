@model JewelryRentalSystem.ViewModels.RoleViewModel

<h4 style="text-align:center; color:#6C757D"> CREATE ROLE</h4>
<hr />
<div class="container" id="createRoleContainer">   
    <form method="post" asp-action="Create" asp-controller="Role">
        <!-- need of form element in HTML 5-->
        <div>
            <label>Role Name</label>
            <input placeholder="Enter role name..." asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div><br />
        <div class="d-inline-flex justify-content-start">
            <button class="btn btn-warning" type="submit">Create</button> &nbsp
            <a class="btn btn-secondary" asp-action="GetAllRoles">Cancel</a>
        </div>
    </form>
</div>