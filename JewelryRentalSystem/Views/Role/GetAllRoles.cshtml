<H1>Get All Roles</H1>

 <a asp-action="Create" asp-controller="Role" class="btn btn-dark">Add Role</a>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <th scope="row">@role.RoleId</th>
                <td>@role.RoleName</td>
                <td><a asp-controller="Role" asp-action="Details" asp-route-roleId="@role.RoleId">View</a></td>
                <td><a asp-controller="Role" asp-action="Update" asp-route-roleId="@role.RoleId">Edit</a></td>
                <td><a asp-controller="Role" asp-action="Delete" asp-route-roleId="@role.RoleId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>