@model JewelryRentalSystem.Models.Cart

@{
    ViewData["Title"] = "Delete";
}

<h4 id="deleteCartH4">Are you sure you want to delete this item to your Cart??</h4>
<hr />
<div class="container" id="deleteCartContainer">
    
    <div id="deleteCartImgDiv">
        <img id="deleteCartImg" src="@Html.DisplayFor(model => model.Product.ProductImage)" />
    </div>
    <div id="deleteCartDetails">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Product.ProductName)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Product.ProductName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ProductQty)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.ProductQty)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.RentDuration)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.RentDuration) day(s)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Product.ProductPrice) 
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Product.ProductPrice)
            </dd>
        </dl>
        <div class="container" id="deleteCartBtns">
            <form asp-action="Delete">
                <input type="hidden" asp-for="CartId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-secondary" asp-action="Index">Cancel</a>
            </form>
        </div>
     </div>
    
</div>
