@model IEnumerable<JewelryRentalSystem.Models.Location>

@{
    ViewData["Title"] = "Index";
}

<div class="container" id="locationContainer">
    <div class="container d-inline-flex justify-content-between">
        <h3 id="locationListH3">BRANCH LOCATIONS</h3>

        <p>
            <a class="btn btn-outline-secondary" asp-action="Create">ADD BRANCH LOCATION</a>
        </p>
    </div>
    <table class="table">
        <thead>
            <tr id="locationTR">
                <th>
                    @Html.DisplayNameFor(model => model.LocationName)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
                <tr id="locationTRBody">
                <td>
                    @Html.DisplayFor(modelItem => item.LocationName)
                </td>
                <td>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.LocationId">Edit</a>                       
@*                        <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.LocationId">Delete</a>*@
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
